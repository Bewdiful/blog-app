<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>My Blog</h1>
            <a href="/new-post" class="btn">Create New Post</a>
        </header>

        <main>
            <% if (posts.length === 0) { %>
                <p class="no-posts">No blog posts yet. Create your first post!</p>
            <% } else { %>
                <div class="posts-grid">
                    <% posts.forEach(post => { %>
                        <div class="post-card">
                            <h2><%= post.title %></h2>
                            <p><%= post.content %></p>
                            <div class="post-actions">
                                <a href="/edit-post/<%= post.id %>" class="btn btn-edit">Edit</a>
                                <a href="/delete-post/<%= post.id %>" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this post?')">Delete</a>
                            </div>
                            <small class="post-date"><%= post.createdAt.toLocaleString() %></small>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </main>
    </div>
</body>
</html>